// -p well-formed -p compile-static -x compile-static:max-latency-diff=4 -p dead-group-removal -p remove-ids

import "primitives/core.futil";
import "primitives/memories/comb.futil";
import "primitives/pipelined.futil";

component main() -> () {
  cells {
    a = std_reg(2);
    b = std_reg(2);
    c = std_reg(2);
    d = std_reg(2);
  }

  wires {
    static<2> group B{
      b.in = 2'd0;
      b.write_en = %0 ? 1'd1;
    }
    static<4> group C{
      c.in = 2'd0;
      c.write_en = %0 ? 1'd1;
    }
    static<14> group A{
      a.in = 2'd0;
      a.write_en = %0 ? 1'd1;
    }
    static<16> group D{
      d.in = 2'd0;
      d.write_en = %0 ? 1'd1;
    }
  }

  control {
    seq {
      A;
      B;
      C;
      D;
    }
  }
}