// -p validate -p static-promotion
import "primitives/core.futil";
import "primitives/memories/comb.futil";

// Checking that compaction respects dependency. Keep this as a static invoke.

component main () -> () {
  cells {
    a = std_reg(32);
    @external out = comb_mem_d1(32, 1, 1);
  }
  wires {
    group a_to_out {
      out.write_data = a.out;
      out.write_en = 1'd1;
      out.addr0 = 1'd0;
      a_to_out[done] = out.done;
    }
  }

  control {
    seq {
      static invoke a(in=32'd5)();
      a_to_out;
    }
  }
}